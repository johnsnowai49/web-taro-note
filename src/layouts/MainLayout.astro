---
import "../styles/global.css";

import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import { withBase } from "../utils/helpers";
import siteConfig from "../site.config";

type LayoutProps = {
  pageTitle: string;
  activePage: string;
  showSubscribeForm?: boolean;
};
const {
  pageTitle,
  activePage,
  showSubscribeForm = true,
} = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="en" class="antialiased break-words">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href={withBase(`/taro-logo.png`)} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href={withBase(`/sitemap-index.xml`)} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Sigmar&family=Kanit:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={siteConfig.title + " - RSS Feed"}
      href={new URL(withBase("/rss.xml"), Astro.site)}
    />
    <title>{pageTitle}</title>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-HKP1PELE06"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-HKP1PELE06");
    </script>
  </head>
  <body class="flex flex-col h-screen overflow-hidden">
    <Nav activePage={activePage} />
    <main
      class="w-full max-w-5xl mx-auto overflow-y-scroll overflow-x-hidden no-scrollbar"
    >
      <slot />
    </main>
    <!-- <Footer /> -->
  </body>
</html>
